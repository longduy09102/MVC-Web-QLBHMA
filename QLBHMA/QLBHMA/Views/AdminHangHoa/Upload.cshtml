
@model M3QLBH.Models.HangHoa
@{
    ViewBag.Title = "Hàng hóa: Upload";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Upload hình cho hàng hóa </h2>
<h3 class="text-info">@Model.Ten</h3>
<div class="text-danger"> @ViewBag.ThongBao</div>

@using (Html.BeginForm("Upload", "AdminHangHoa", FormMethod.Post,
    htmlAttributes: new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="custom-file">
        <input type="file" class="custom-file-input" id="inputfile" name="taptins" multiple>
        <label class="custom-file-label" for="inputfile">chọn tập tin</label>
    </div>
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Upload</button>
    </div>
}

